<div class="bg-white rounded-lg shadow-md p-6 mb-8">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
    <h1 class="text-3xl font-serif text-blue-900 mb-4 md:mb-0">Discover Restaurants</h1>

    <% if user_signed_in? %>
      <%= link_to new_restaurant_path, class: "bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700 transition-colors inline-flex items-center" do %>
        <i class="fas fa-plus mr-2"></i> Add Restaurant
      <% end %>
    <% end %>
  </div>

  <div class="mb-8">
    <%= search_form_for @q, class: "bg-gray-50 p-4 rounded-lg" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= f.label :name_cont, "Restaurant Name", class: "block text-sm text-gray-600 mb-1" %>
          <%= f.search_field :name_cont, class: "w-full rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= f.label :category_eq, "Category", class: "block text-sm text-gray-600 mb-1" %>
          <%= f.select :category_eq, [['All Categories', ''], ['Fine Dining', 'Fine Dining'], ['Casual', 'Casual'], ['Fast Food', 'Fast Food'], ['Café', 'Café'], ['Bistro', 'Bistro']], {}, class: "w-full rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div>
          <%= f.label :price_level_eq, "Price Level", class: "block text-sm text-gray-600 mb-1" %>
          <%= f.select :price_level_eq, [['All Prices', ''], ['$', '$'], ['$$', '$$'], ['$$$', '$$$'], ['$$$$', '$$$$']], {}, class: "w-full rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
        </div>

        <div class="flex items-end">
          <%= f.submit "Search", class: "bg-blue-900 text-white px-4 py-2 rounded hover:bg-blue-800 transition-colors" %>
          <%= link_to "Clear", restaurants_path, class: "ml-2 bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% # Sample data for prototype %>
    <% sample_restaurants = [
      { name: "Le Bistrot Provençal", category: "Fine Dining", price_level: "$$$", description: "Authentic Provençal cuisine with a focus on seasonal ingredients from local markets." },
      { name: "Café du Port", category: "Café", price_level: "$$", description: "Cozy waterfront café offering fresh seafood and stunning marina views." },
      { name: "L'Olivier", category: "Bistro", price_level: "$$", description: "Traditional Mediterranean dishes served in a charming setting with olive trees." },
      { name: "La Table de Sébastien", category: "Fine Dining", price_level: "$$$$", description: "Exquisite French gastronomy with a modern twist by Chef Sébastien." },
      { name: "Le Garage", category: "Casual", price_level: "$", description: "Industrial-chic setting serving casual comfort food with local craft beers." },
      { name: "Flamant Rose", category: "Fine Dining", price_level: "$$$", description: "Elegant restaurant specializing in Camargue rice dishes and local specialties." }
    ] %>

    <% sample_restaurants.each do |restaurant| %>
      <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
        <div class="h-48 bg-gray-300 relative">
          <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" alt="<%= restaurant[:name] %>" class="w-full h-full object-cover">
          <div class="absolute top-2 right-2 bg-white px-2 py-1 rounded text-sm font-semibold text-gray-700"><%= restaurant[:price_level] %></div>
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
            <span class="text-white text-sm bg-amber-600 px-2 py-1 rounded"><%= restaurant[:category] %></span>
          </div>
        </div>

        <div class="p-6">
          <h3 class="text-xl font-serif font-semibold mb-2 text-blue-900"><%= restaurant[:name] %></h3>
          <p class="text-gray-600 mb-4 line-clamp-2"><%= restaurant[:description] %></p>

          <div class="flex justify-between items-center">
            <%= link_to "#", class: "text-amber-600 hover:text-amber-700 font-medium flex items-center" do %>
              View Details <i class="fas fa-arrow-right ml-2"></i>
            <% end %>

            <div class="flex text-amber-500">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
